<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/add_vet"
    tools:context=".adminRegister">


    <EditText
        android:id="@+id/regPassword"
        android:layout_width="295dp"
        android:layout_height="52dp"
        android:layout_above="@+id/regPasswordRE"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="63dp"
        android:layout_marginEnd="54dp"
        android:layout_marginBottom="17dp"
        android:background="@drawable/inputtxt"
        android:ems="10"
        android:hint="@string/password_reg"
        android:textSize="20sp"
        android:gravity="center"
        android:importantForAutofill="no"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textColor="@color/maroon"
        android:textColorHint="@color/maroonHint"
        app:layout_constraintBottom_toTopOf="@+id/regPasswordRE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/emailReg"
        android:layout_width="297dp"
        android:layout_height="53dp"
        android:layout_above="@+id/adminName"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="63dp"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="18dp"
        android:background="@drawable/inputtxt"
        android:ems="10"
        android:hint="@string/e_mail_reg"
        android:textSize="20sp"
        android:gravity="center"
        android:importantForAutofill="no"
        android:inputType="textEmailAddress"
        android:textAlignment="center"
        android:textColor="@color/maroon"
        android:textColorHint="@color/maroonHint"
        app:layout_constraintBottom_toTopOf="@+id/adminName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RegisterView"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/regPasswordRE"
        android:layout_width="wrap_content"
        android:layout_height="53dp"
        android:layout_above="@+id/registertxt"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="63dp"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/inputtxt"
        android:ems="10"
        android:hint="@string/re_enter_password"
        android:textSize="20sp"
        android:gravity="center"
        android:importantForAutofill="no"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textColor="#581414"
        android:textColorHint="#86581414"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/adminName"
        android:layout_width="297dp"
        android:layout_height="53dp"
        android:layout_above="@+id/regPassword"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="63dp"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="17dp"
        android:background="@drawable/inputtxt"
        android:ems="10"
        android:hint="@string/username_reg"
        android:textSize="20sp"
        android:gravity="center"
        android:importantForAutofill="no"
        android:textAlignment="center"
        android:textColor="@color/maroon"
        android:textColorHint="@color/maroonHint"
        app:layout_constraintBottom_toTopOf="@+id/regPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/registertxt"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_above="@+id/registerBtn"
        android:layout_marginBottom="4dp"
        android:gravity="center"
        android:text="@string/reg_txt"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/maroon" />

    <TextView
        android:id="@+id/RegisterView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/emailReg"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="46dp"
        android:layout_marginBottom="45dp"
        android:text="@string/admin_register_txt"
        android:textColor="#FF9017"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/registerBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="140dp"
        android:layout_marginEnd="137dp"
        android:layout_marginBottom="57dp"
        android:background="@drawable/add_btn"
        android:elevation="4dp"
        android:text="@string/login_btn_register"
        android:gravity="center"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:textColor="@color/maroon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="86dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="95dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="97dp"
        app:srcCompat="@drawable/woof_logo" />

</RelativeLayout>